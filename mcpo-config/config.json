{
  "mcpServers": {
    "mcp-sharepoint": {
      "command": "uvicorn",
      "args": ["main:app", "--host", "0.0.0.0", "--port", "8000"],
      "cwd": "/app/mcp-sharepoint",
      "env": {
        "AZ_TENANT_ID": "${AZ_TENANT_ID}",
        "AZ_CLIENT_ID": "${AZ_CLIENT_ID}",
        "AZ_CLIENT_SECRET": "${AZ_CLIENT_SECRET}"
      }
    },
    "mcp-time": {
      "command": "uvx",
      "args": ["mcp-server-time", "--local-timezone=America/New_York"]
    }
  }
}
